{
  // Editor-Einstellungen
  "editor.bracketPairColorization.enabled": true, // Aktiviert die Farbzuweisung für zusammengehörige Klammern
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Legt Prettier als Standard-Formatter fest
  "editor.formatOnPaste": true, // Formatiert den Code beim Einfügen
  "editor.formatOnSave": true, // Formatiert den Code beim Speichern
  "editor.smoothScrolling": true, // Aktiviert sanftes Scrollen
  "editor.tabCompletion": "on", // Aktiviert die Tab-Vervollständigung

  // Emmet-Einstellungen
  "emmet.includeLanguages": {
    "markdown": "html" // Aktiviert Emmet-Abkürzungen in Markdown-Dateien
  },

  // Explorer-Einstellungen
  "explorer.confirmDragAndDrop": false, // Deaktiviert die Bestätigung beim Ziehen und Ablegen

  // Dateien-Einstellungen
  "files.autoSave": "afterDelay", // Aktiviert das automatische Speichern nach einer Verzögerung
  "files.autoSaveDelay": 1000, // Setzt die Verzögerung für das automatische Speichern auf 1000 Millisekunden

  // Git-Einstellungen
  "git.autofetch": true, // Aktiviert das automatische Abrufen von Git-Änderungen
  "git.confirmSync": false, // Deaktiviert die Bestätigung beim Synchronisieren
  "git.enableSmartCommit": true, // Aktiviert intelligentes Committen
  "git.openRepositoryInParentFolders": "always", // Öffnet das Repository in übergeordneten Ordnern

  // Markdown PDF-Einstellungen
  "markdown-pdf.highlightStyle": "github.css", // Setzt den Hervorhebungsstil für Markdown PDF

  // Markdown Preview Enhanced-Einstellungen
  "markdown-preview-enhanced.enableExtendedTableSyntax": true, // Aktiviert erweiterte Tabellensyntax in Markdown
  "markdown-preview-enhanced.previewTheme": "github-light.css", // Setzt das Vorschau-Theme für Markdown auf "github-light"

  // Markdown Erweiterungseinstellungen
  "markdown.extension.bold.indicator": "**", // Verwendet '**' für Fettschrift in Markdown
  "markdown.extension.italic.indicator": "*", // Verwendet '*' für Kursivschrift in Markdown
  "markdown.extension.print.absoluteImgPath": true, // Verwendet absolute Bildpfade beim Drucken von Markdown-Dateien
  "markdown.extension.tableFormatter.enabled": true, // Aktiviert den Tabellen-Formatter in Markdown
  "markdown.extension.toc.updateOnSave": true, // Aktualisiert das Inhaltsverzeichnis (TOC) beim Speichern einer Markdown-Datei

  // Markdown spezifische Einstellungen
  "markdown.updateLinksOnFileMove.enabled": "always", // Aktualisiert Links beim Verschieben von Dateien
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Legt Prettier als Standard-Formatter für Markdown-Dateien fest
  },
  "[markdown][autohotkey]": {
    "editor.defaultFormatter": "mark-wiemer.ahk-v1-formatter" // Legt mark-wiemer.ahk-v1-formatter als Standard-Formatter für eingebettete AHK-Codeblöcke in Markdown fest
  },

  // Shell Script-Einstellungen
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format" // Legt foxundermoon.shell-format als Standard-Formatter für Shell-Skripte fest
  },

  // AutoHotkey-Einstellungen
  "autohotkey.version": "v1", // Setzt die AutoHotkey-Version auf v1
  "[ahk]": {
    "editor.defaultFormatter": "mark-wiemer.ahk-v1-formatter" // Legt mark-wiemer.ahk-v1-formatter als Standard-Formatter für AHK-Code fest
  },

  // Notebook-Einstellungen
  "notebook.defaultFormatter": "esbenp.prettier-vscode", // Legt Prettier als Standard-Formatter für Notizbücher fest

  // Sicherheits-Einstellungen
  "security.workspace.trust.banner": "never", // Deaktiviert das Vertrauens-Banner für Arbeitsbereiche
  "security.workspace.trust.untrustedFiles": "open", // Öffnet unzuverlässige Dateien direkt

  // Arbeitsbereich-Einstellungen
  "workbench.startupEditor": "none" // Legt den Start-Editor auf "none" fest
}
